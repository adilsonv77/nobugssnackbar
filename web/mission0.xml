	<commands>
		<category name="logic" show="false"/>
		<category name="function" show="false"/>
		
		<category name="askHasHunger" show="false"/>
	</commands>
	<cooker>initial</cooker>
	<customers>
		<customer>
			<id>01</id>
			<init>door</init>
			<dest>counter1</dest>
			<foods>
				<food qt="2" price="1">hotdog</food>
			</foods>
			<drinks>
				<drink qt="1" price="1">coke</drink>
			</drinks>
		</customer>
	</customers>
	<xml>
		<block type="move_goToBarCounter" >
			<value name="VALUE">
				<block type="math_number">
					<field name="NUM">1</field>
				</block>
			</value>
			<next>
				<block type="controls_whileUntil" inline="false">
					<field name="MODE">WHILE</field>
					<value name="BOOL">
						<block type="logic_negate" inline="false">
							<value name="BOOL">
								<block type="ask_isThereACustomer">
								</block>
							</value>
						</block>
					</value>
					<next>
						<block type="variables_set" inline="true">
							<field name="VAR">orderFood</field>
							<value name="VALUE">
								<block type="ask_askForFood">
								</block>
							</value>
							<next>
								<block type="move_goToDisplay">
									<next>
										<block type="variables_set" inline="true">
											<field name="VAR">food</field>
											<value name="VALUE">
												<block type="prepare_catchFood">
													<value name="VALUE">
														<block type="variables_get">
															<field name="VAR">orderFood</field>
														</block>
													</value>
												</block>
											</value>
											<next>
												<block type="move_goToBarCounter">
													<value name="VALUE">
														<block type="math_number">
															<field name="NUM">1</field>
														</block>
													</value>
													<next>
														<block type="do_deliver">
															<value name="VALUE">
																<block type="variables_get">
																	<field name="VAR">food</field>
																</block>
															</value>
														</block>
													</next>
												</block>
											</next>
										</block>

									</next>
								</block>
							</next>
						</block>
					</next>
				</block>
			</next>
		</block>
	</xml>
</mission>
